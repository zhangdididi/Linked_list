/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    public boolean isPalindrome(ListNode head) {
        if (head == null || head.next == null) {
            return true;
        }
        ListNode prev = null;
        ListNode curr = head;
        ListNode fast = head;
        while (fast != null && fast.next != null) {
            fast = fast.next.next;
            ListNode following = curr.next;
            curr.next = prev;
            
            prev = curr;
            curr = following;
        }
        if (fast != null) {
            curr = curr.next;
        }
        while (curr != null) {
            if (prev.val != curr.val) {
                return false;
            }
            prev = prev.next;
            curr = curr.next;
        }
        return true;
    }
}
